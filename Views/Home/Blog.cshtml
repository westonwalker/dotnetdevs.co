@{
    ViewData["Title"] = ".NET articles and tutorials for developers and companies";
    ViewData["Description"] = "Articles and tutorials to help devs learn and companies hire.";
    Layout = "_Layout";
}
@section Headers {
    <link href="~/css/blog.css" rel="stylesheet" type="text/css" />
}

<div class="relative py-12 md:py-20 px-4 md:px-8 max-w-4xl mx-auto text-left">
    <div class="flex-1">
        <h1 class="text-black text-3xl leading-tight font-bold pl-6 mb-6">
            Recently published
