@model CompanyEdit
@{
	ViewData["Title"] = "Edit your company profile";
}
<div class="">
	<div class="relative flex flex-wrap justify-center items-center py-12 md:py-20 max-w-6xl mx-auto sm:px-8">
		<div class="flex-1">
			@if (!Model.IsSubscribed)
			{
			<partial name="~/Views/Shared/Partials/_SubscribeAlert.cshtml" />
			}
			<h1 class="mb-4 text-black text-3xl leading-tight font-bold pl-6">
				Your company profile
			</h1>
			<form asp-action="Update" asp-controller="Companies" asp-route-id="@Model.ID" method="post" enctype="multipart/form-data">
				<div class="text-red-500 text-sm flex justify-start">
					@Html.ValidationSummary()
				</div>
				<div class="bg-white border-y sm:border text-left">
					<div class="flex flex-col md:flex-row md:justify-between p-6 md:gap-6">
						<div class="w-full md:w-1/3 space-y-6 mb-6 md:mb-0">
							<div class="">
								<h2 class="text-lg font-semibold text-gray-900">Company details</h2>
								<p class="text-base text-gray-500">
									Information about your business. This is your chance to show off your company to potential hires!
								</p>
							</div>
						</div>
						<div class="w-full md:w-2/3 space-y-6">
							<div>
								<label asp-for="CompanyName" class="block text-base font-medium text-gray-700">Company name *</label>
								<div class="mt-2">
									<input asp-for="CompanyName" type="text" required class="block w-full py-2 px-3 text-gray-700 outline-none bg-white border-gray-300  hover:border-indigo-600 focus:border-indigo-600" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									<span asp-validation-for="CompanyName"></span>
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-gray-700" for="twitter">Website *</label>
								<div class="mt-1 flex">
									<span class="inline-flex items-center px-3 border border-r-0 border-gray-300 bg-gray-50 text-gray-500">
										https://
									</span>
									<input asp-for="Website" type="text" class="flex-1 block w-full py-2 px-3 text-gray-700 outline-none bg-white border-gray-300  hover:border-indigo-600 focus:border-indigo-600" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									@Html.ValidationMessageFor(m => m.Website)
								</div>
							</div>
							<div>
								<label asp-for="Bio" class="block text-base font-medium text-gray-700">About your company *</label>
								<div class="mt-2">
									<textarea asp-for="Bio" rows="8" type="text" required class="block w-full py-2 px-3 outline-none text-gray-700 bg-white border-gray-300  hover:border-indigo-600 focus:border-indigo-600"></textarea>
								</div>
								<div class="mt-1 text-red-500 text-sm">
									@Html.ValidationMessageFor(m => m.Bio)
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-gray-700" for="country">Avatar</label>
								<p class="text-sm text-gray-500">Leave empty if you don't want to update your avatar. A square png or jpg image works best (250x250). Large images will get cutoff due to size limitations.</p>
								<div class="mt-2 flex flex-col md:flex-row md:items-center items-start">
									<div class="flex-1">
										<input asp-for="AvatarFile" type="file" accept=".png, .jpg">
									</div>
								</div>
								<div class="mt-1 text-red-500 text-sm">
									<span asp-validation-for="Avatar"></span>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="bg-white border-y sm:border text-left mt-12">
					<div class="flex flex-col md:flex-row md:justify-between p-6 md:gap-6">
						<div class="w-full md:w-1/3 space-y-6 mb-6 md:mb-0">
							<div class="">
								<h2 class="text-lg font-semibold text-gray-900">Personal details</h2>
								<p class="text-base text-gray-500">
									Information about you, the contact point for your business on DotnetDevs.
								</p>
							</div>
						</div>
						<div class="w-full md:w-2/3 space-y-6">
							<div>
								<label asp-for="PersonalName" class="block text-base font-medium text-gray-700">Your name *</label>
								<div class="mt-2">
									<input asp-for="PersonalName" type="text" required class="block w-full py-2 px-3 text-gray-700 outline-none bg-white border-gray-300  hover:border-indigo-600 focus:border-indigo-600" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									<span asp-validation-for="PersonalName"></span>
								</div>
							</div>
							<div>
								<label asp-for="JobTitle" class="block text-base font-medium text-gray-700">Job title *</label>
								<div class="mt-2">
									<input asp-for="JobTitle" type="text" required class="block w-full py-2 px-3 text-gray-700 outline-none bg-white border-gray-300  hover:border-indigo-600 focus:border-indigo-600" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									<span asp-validation-for="JobTitle"></span>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="w-full flex justify-end mt-6 pr-6 lg:pr-0">
					<button type="submit" class="ml-auto text-base font-semibold text-white bg-indigo-600 hover:bg-indigo-700 leading-loose relative flex items-center justify-center py-2 px-12 w-auto max-w-sm md:w-auto">
						Save
					</button>
				</div>
			</form>
		</div>
	</div>
</div>